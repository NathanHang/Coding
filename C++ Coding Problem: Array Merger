#include <iostream>
#include <vector>

using namespace std;

double ArrayMergerAndMedianFinder(vector<int> &vec1, vector<int> &vec2, double Median){
        vector<int> vec3 (vec1.size() + vec2.size(), 0);
        int ElementComparisonForVectorA = 0;
        int ElementComparisonForVectorB = 0;
        for(int i = 0; i < vec3.size(); i++){
                if(ElementComparisonForVectorA == vec1.size() || ElementComparisonForVectorB == vec2.size()){
                        if(ElementComparisonForVectorA == vec1.size()){
                                vec3[i] = vec2[ElementComparisonForVectorB];
                                ElementComparisonForVectorB += 1;
                        }
                        else{
                                vec3[i] = vec1[ElementComparisonForVectorA];
                                ElementComparisonForVectorA += 1;
                        }
                }
                else{
                        if(vec1[ElementComparisonForVectorA] < vec2[ElementComparisonForVectorB]){
                                vec3[i] = vec1[ElementComparisonForVectorA];
                                ElementComparisonForVectorA += 1;
                        }
                        else{
                                vec3[i] = vec2[ElementComparisonForVectorB];
                                ElementComparisonForVectorB += 1;
                        }
                }
        }

        cout << "First Array: ";
        for(int i = 0; i < vec1.size(); i++){
                cout << vec1[i] << " ";
        }

        cout << endl;
        cout << "Second Array: ";
        for(int i = 0; i < vec2.size(); i++){
                cout << vec2[i] << " ";
        }

        cout << endl;
        cout << "Merged Array: ";
        for(int i = 0; i < vec3.size(); i++){
                cout << vec3[i] << " ";
        }
        cout << endl;
        if(vec3.size() % 2 == 0){
                Median = vec3[vec3.size()/2];
        }
        else{
                Median = (vec3[vec3.size()/2] + vec3[vec3.size()/2 + 1])/2;
        }

        return Median;
}

int main(){
        vector<int> a {};
        vector<int> b {1, 4, 5, 6, 7, 8, 9, 10, 11, 14, 23, 25, 27, 29, 34};
        double median;

        median = ArrayMergerAndMedianFinder(a, b, median);
        cout << "Median of the Array: " << median << endl;

        return 0;
}
