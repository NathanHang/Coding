#include <iostream>
#include <vector>

using namespace std;

int main()
{
    vector<vector<int>> matrix
    {
        {1, 1, 1},
        {2, 2, 2},
        {3, 3, 3},
    };
    int pi[] = {5, 5, 5};
    
    double temp = 0;
    for(int i = 0; i < matrix.size(); i++){
        temp = 0;
        cout << "Dot Product for Row " << i + 1 << ": ";
        for(int j = 0; j < matrix[i].size(); j++){
            temp += matrix[i][j]*pi[j];
            if(j == matrix.size() - 1){
                cout << temp;
            }
        }
        cout << endl;
    }

    return 0;
}
