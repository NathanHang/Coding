//If else-if else basics.
#include <iostream>

int main()
{
    int age = 15;
    if(age < 18){
        std::cout << "You can't buy gun" << std::endl;
    }
    if(age < 16){
        std::cout << "You are way too young to buy gun" << std::endl;
    }
    else{
        std::cout << "Which gun you would like to get" << std::endl;
    }

    return 0;
}
