/*
My solution according of what was asked of the problem. For loop version.
*/
#include <iostream>

int main()
{
    long userInput = 0, userSecondInput = 0, userThirdInput = 0, userFourthInput = 0;
    std::cout << "First series(Incrementation by 1 starting from 1): " << std::endl;
    std::cout << "Input the amount of numbers you want to print > ";
    std::cin >> userInput;

    for(int i = 1; i <= userInput; i++){
        std::cout << i << " ";
    }

    std::cout << std::endl;
    std::cout << std::endl;

    std::cout << "Second series(Decrementation by 1 starting from any number until at 1): " << std::endl;
    std::cout << "Input the initial number > ";
    std::cin >> userSecondInput;

    for(int i = userSecondInput; i > 0; i--){
    for(int i = userSecondInput; i >= 1; i--){
        std::cout << i << " ";
    }

    std::cout << std::endl;
    std::cout << std::endl;

    std::cout << "Third series(Incrementation by 2 starting from 0): " << std::endl;
    std::cout << "Input the amount of numbers you want to print > ";
    std::cin >> userThirdInput;

    for(int i = 0; i < userThirdInput; i++){
        std::cout << 2 * i << " ";
    }
    
    std::cout << std::endl;
    std::cout << std::endl;

    std::cout << "Fourth series(Incrementation by 2 starting from 1): " << std::endl;
    std::cout << "Input the amount of numbers you want to print > ";
    std::cin >> userFourthInput;

    for(int i = 0; i < userFourthInput; i++){
        std::cout << 2 * i + 1 << " ";
    }
    return 0;
}
